extends layout

block content
  .inner
    h2.title= title
    form.form(action="/register" method="POST")
      label.label(for="name") Name
      input.text_field(type="text" name="name")
      label.label(for="email") Email
      input.text_field(type="email" name="email")
      label.label(for="password") Password
      input.text_field(type="password" name="password")
      label.label(for="password-confirm") Confirm Password
      input.text_field(type="password-confirm" name="password-confirm")
      input.button(type="submit" value="Submit")